<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles Button -->
    <style name="ButtonStyle.Base" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">8dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ButtonStyle.Email" parent="ButtonStyle.Base">
        <item name="android:background">@drawable/button_border_blue</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ButtonStyle.Google" parent="ButtonStyle.Base">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableLeft">@drawable/ic_google_logo</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ButtonStyle.Button" parent="ButtonStyle.Base">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>